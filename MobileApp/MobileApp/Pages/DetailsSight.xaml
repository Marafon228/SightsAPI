<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.DetailsSight">
    <ContentPage.Content>
        <ScrollView>
            
        <Grid BindingContext="{Binding CurrentSight}">
            <StackLayout>
                <Label Margin="5" FontSize="30" HorizontalOptions="Center" Text="{Binding Name}"></Label>
                <Image HeightRequest="250" Source="{Binding Photo}" HorizontalOptions="FillAndExpand"></Image>
                <Label Margin="5" FontSize="25" HorizontalOptions="FillAndExpand" Text="{Binding Description}"></Label>
            </StackLayout>
            
        </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>